
@model Customer

<h1>Register</h1>
<form asp-action="Register" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="alert-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.CompanyName" class="control-label">Company Name:</label>
            <input asp-for="@Model.CompanyName" class="form-control" placeholder="Company Name" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Address" class="control-label">Address:</label>
            <input asp-for="@Model.Address" class="form-control" placeholder="Address" />
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-3">
            <label asp-for="@Model.City" class="control-label">City:</label>
            <input asp-for="@Model.City" class="form-control" placeholder="City" />
        </div>
        <div class="col-md-3">
            <label asp-for="@Model.Region" class="control-label">Region:</label>
            <input asp-for="@Model.Region" class="form-control" placeholder="Region" />
        </div>
        <div class="col-md-3">
            <label asp-for="@Model.PostalCode" class="control-label">Postal Code:</label>
            <input asp-for="@Model.PostalCode" class="form-control" placeholder="Postal Code" />
        </div>
        <div class="col-md-3">
            <label asp-for="@Model.Country" class="control-label">Country:</label>
            <input asp-for="@Model.Country" class="form-control" placeholder="Country" />
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Phone" class="control-label">Phone:</label>
            <input asp-for="@Model.Phone" class="form-control" placeholder="Phone" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Fax" class="control-label">Fax:</label>
            <input asp-for="@Model.Fax" class="form-control" placeholder="Fax" />
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary">Register</button>
</form>
